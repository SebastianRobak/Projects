#
#  To sa opcje dla kompilacji
#
CXXFLAGS=-g -Iinc -Wall -pedantic -std=c++0x

__start__: rotations_3D
	./rotations_3D

rotations_3D: obj obj/main.o obj/vector.o obj/Figure.o obj/cuboid.o obj/Hexagon.o obj/gnuplot_link.o
	g++ -Wall -pedantic -std=c++0x -o rotations_3D obj/main.o\
	           obj/vector.o obj/Figure.o obj/cuboid.o obj/Hexagon.o obj/gnuplot_link.o

obj:
	mkdir obj

obj/gnuplot_link.o: inc/gnuplot_link.hh src/gnuplot_link.cpp
	g++ -c ${CXXFLAGS} -o obj/gnuplot_link.o src/gnuplot_link.cpp

obj/main.o: src/main.cpp inc/cuboid.hh inc/matrix3x3.hh inc/matrix.hh\
           inc/vector3D.hh inc/vector.hh
	g++ -c ${CXXFLAGS} -o obj/main.o src/main.cpp

obj/vector.o: src/vector.cpp inc/vector.hh
	g++ -c ${CXXFLAGS} -o obj/vector.o src/vector.cpp

obj/Figure.o: src/Figure.cpp inc/Figure.hh\
         inc/vector3D.hh inc/vector.hh
	g++ -c ${CXXFLAGS} -o obj/Figure.o src/Figure.cpp

obj/cuboid.o: src/cuboid.cpp inc/cuboid.hh\
         inc/vector3D.hh inc/vector.hh
	g++ -c ${CXXFLAGS} -o obj/cuboid.o src/cuboid.cpp

obj/Hexagon.o: src/Hexagon.cpp inc/Hexagon.hh\
         inc/vector3D.hh inc/vector.hh
	g++ -c ${CXXFLAGS} -o obj/Hexagon.o src/Hexagon.cpp

clean:
	rm -f obj/*.o rotations_3D
